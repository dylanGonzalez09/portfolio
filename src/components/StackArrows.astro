---
import Arrow from "./svg/Arrow.astro";
---

<!-- Left Arrows -->
<Arrow
  classes="bottom-[calc(50%+9rem)] translate-y-1/2 left-1/2 transform -translate-x-1/2 w-[450px]"
/>

<Arrow
  classes="bottom-[calc(50%+5rem)] translate-y-1/2 left-[calc(50%-2rem)] transform -translate-x-1/2 w-[450px]"
/>

<Arrow
  classes="bottom-[calc(50%+1rem)] translate-y-1/2 left-[calc(50%-4rem)] transform -translate-x-1/2 w-[450px]"
/>

<!-- Right Arrows -->

<Arrow
  classes="bottom-[calc(50%+9rem)] translate-y-1/2 left-1/2 transform -translate-x-1/2 w-[450px] scale-x-[-1]"
/>

<Arrow
  classes="bottom-[calc(50%+5rem)] translate-y-1/2 left-[calc(50%+2rem)] transform -translate-x-1/2 w-[450px] scale-x-[-1]"
/>

<Arrow
  classes="bottom-[calc(50%+1rem)] translate-y-1/2 left-[calc(50%+4rem)] transform -translate-x-1/2 w-[450px] scale-x-[-1]"
/>
