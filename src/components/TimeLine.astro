---
const experiences = [
  {
    startDate: "1/9/2023",
    finishDate: "1/3/2024",
    company: "SENACYT",
    title:
      "Aplicación Android para la Gestión y alerta de Medicamentos en personas con discapacidad",
    description:
      "En este proyecto logré desarrollar una aplicación en Android que gestione de forma eficiente los medicamentos de las personas mayores mediante tecnología NFC",
  },
];
---

<div class="w-11/12 md:max-w-6xl md:px-16 mb-20">
  <ol class="relative border-s border-gray-200 dark:border-gray-700">
    {
      experiences.map(
        ({ startDate, finishDate, title, company, description }) => (
          <li class="mb-10 ms-4 flex flex-col gap-2">
            <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-green-500 animate-pulse ring-4 ring-green-500/25" />
            <time class="mb-1 text-md font-normal leading-none text-gray-400 dark:text-gray-500">
              {startDate} - {finishDate}
            </time>
            <h3 class="md:text-xl font-semibold text-gray-900 dark:text-white">
              {title} -{" "}
              <span class="font-sans text-orange-500/85">{company}</span>
            </h3>
            <p class="mb-4 md:text-lg font-normal text-gray-500 dark:text-gray-400">
              {description}
            </p>
          </li>
        )
      )
    }
  </ol>
</div>
