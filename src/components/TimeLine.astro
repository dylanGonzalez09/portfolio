---
const experiences = [
  {
    startDate: "1/9/2023",
    finishDate: "1/3/2024",
    company: "SENACYT",
    title:
      "Aplicación Android para la Gestión y alerta de Medicamentos en personas con discapacidad",
    description:
      "En este proyecto logré realizar una aplicación que pueda gestionar los medicamentos de las personas discapacitadas mediante tecnológia NFC",
  },
];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700">
  {
    experiences.map(
      ({ startDate, finishDate, title, company, description }) => (
        <li class="mb-10 ms-4">
          <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />
          <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
            {startDate}
            {finishDate} -
          </time>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            {title} - {company}
          </h3>
          <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
            {description}
          </p>
        </li>
      )
    )
  }
</ol>
