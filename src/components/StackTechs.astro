---
import {
  IconBrandNextjs,
  IconBrandReact,
  IconBrandMysql,
  IconBrandTailwind,
  IconBrandPrisma,
  IconBrandNodejs,
  IconBrandAstro,
} from "@tabler/icons-react";

import TechIcon from "./svg/TechIcon.astro";
---

<!-- Left icons -->
<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+10rem)] -translate-y-1/2 left-[calc(50%-10rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandPrisma
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 rounded-full"
  /></TechIcon
>

<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+14rem)] -translate-y-1/2 left-[calc(50%-8rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandNodejs
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 rounded-full bg-green-950"
  /></TechIcon
>

<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+18rem)] -translate-y-1/2 left-[calc(50%-6rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandAstro
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 rounded-full"
  /></TechIcon
>

<!-- Center icon -->

<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+18rem)] -translate-y-1/2 left-[calc(50%-6rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandAstro
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 rounded-full"
  /></TechIcon
>

<!-- Right icons -->

<TechIcon
  classes="w-12 h-12 md:w-16 md:h-16 bottom-[calc(50%+20rem)] -translate-y-1/2 left-[calc(50%-1.2rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandNextjs
    stroke={1}
    className="w-12 h-12 md:w-16 md:h-16 bg-black rounded-full"
  /></TechIcon
>

<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+10rem)] -translate-y-1/2 left-[calc(50%+8rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandTailwind
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 rounded-full text-blue-300"
  /></TechIcon
>

<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+14rem)] -translate-y-1/2 left-[calc(50%+6rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandReact
    stroke={1}
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 text-blue-500 rounded-full"
  /></TechIcon
>

<TechIcon
  classes="w-8 h-8 md:w-12 md:h-12 bottom-[calc(50%+18rem)] -translate-y-1/2 left-[calc(50%+4rem)] transform -translate-x-1/2 animate-bounce"
>
  <IconBrandMysql
    stroke={1}
    className="w-8 h-8 md:w-12 md:h-12 rounded-full"
  /></TechIcon
>
