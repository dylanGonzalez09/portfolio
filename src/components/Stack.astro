---
import Logo from "./Logo.astro"
import StackArrows from "./StackArrows.astro"
import StackTechs from "./StackTechs.astro"
import StackBgIcons from "./StackBgIcons.astro"
---

<div class="h-screen relative w-full mt-40">
  <div
    class={`absolute flex justify-center items-center bg-gradient-to-r from-purple-500 to-purple-900 shadow-2xl shadow-purple-950 w-60 h-60 rounded-full left-1/2 bottom-1/2 translate-y-1/2 transform -translate-x-1/2 `}
  >
    <Logo classes="text-6xl" />
  </div>

  <!-- Arrows -->
  <StackArrows />

  <!-- Tech icons -->
  <StackTechs />

  <!-- floating Icons -->
  <StackBgIcons />
</div>
